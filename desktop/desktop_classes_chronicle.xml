<root>
	<!-- =================================================================================================================== -->
	<!-- =================================================================================================================== -->
	<windowclass name="chat" merge="join">
		<sheetdata>
			<basicchatwindow name="chat">
				<droptypes>
					<type merge="add">attack</type>
					<type merge="add">damage</type>
					<type merge="add">heal</type>
					<type merge="add">init</type>
					<type merge="add">save</type>
					<type merge="add">check</type>
				</droptypes>
			</basicchatwindow>
		</sheetdata>
	</windowclass>
	
	<!-- =================================================================================================================== -->
	<!-- Adjusted -->
	<!-- =================================================================================================================== -->
	<panel name="modifierstack" merge="join">
		<bounds>15,-100,320,57</bounds>
	</panel>

	<!-- =================================================================================================================== -->
	<!-- Adjusted -->
	<!-- =================================================================================================================== -->
	<windowclass name="modifierstack">
		<sizelimits>
			<minimum width="200" height="60" />
		</sizelimits>
		<sheetdata>
			<modifierstack_base name="base">
				<acceptdrop>
					<type merge="add">attack</type>
					<type merge="add">damage</type>
					<type merge="add">heal</type>
					<type merge="add">init</type>
					<type merge="add">save</type>
					<type merge="add">check</type>
					<type merge="add">recovery</type>
				</acceptdrop>
			</modifierstack_base>
			<modifierstack_modifier name="modifier">
				<acceptdrop>
					<type merge="add">attack</type>
					<type merge="add">damage</type>
					<type merge="add">heal</type>
					<type merge="add">init</type>
					<type merge="add">save</type>
					<type merge="add">check</type>
					<type merge="add">recovery</type>
				</acceptdrop>
			</modifierstack_modifier>

			<button_modifierkey name="PLUS1">
				<bounds>80,8,30,18</bounds>
			</button_modifierkey>
			<button_modifierkey name="PLUS2">
				<bounds>120,8,30,18</bounds>
			</button_modifierkey>
			<button_modifierkey name="PLUS4">
				<bounds>160,8,30,18</bounds>
			</button_modifierkey>

			<button_modifierkey name="BONUS1">
				<bounds>200,8,30,18</bounds>
			</button_modifierkey>
			<button_modifierkey name="BONUS2">
				<bounds>240,8,30,18</bounds>
			</button_modifierkey>
			<button_modifierkey name="BONUS4">
				<bounds>280,8,30,18</bounds>
			</button_modifierkey>

			<button_modifierkey name="MINUS1">
				<bounds>80,35,30,18</bounds>
			</button_modifierkey>
			<button_modifierkey name="MINUS2">
				<bounds>120,35,30,18</bounds>
			</button_modifierkey>
			<button_modifierkey name="MINUS4">
				<bounds>160,35,30,18</bounds>
			</button_modifierkey>
		</sheetdata>
	</windowclass>
</root>