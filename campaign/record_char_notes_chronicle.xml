					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<static textres="char_label_notes_destiny" />
			</label_charframetop>

			<!-- =================================================================================================================== -->
			<!-- Destiny Points -->
			<!-- =================================================================================================================== -->
			<label name="label_dpdetail">
				<anchored width="100">
