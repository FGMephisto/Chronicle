			</label_fieldtop>

			<label>
				<anchored to="label_dpdetail">
					<top anchor="top" offset="2" />
					<left anchor="right" relation="relative" offset="5" />
				</anchored>
				<static>-</static>
				<center />
			</label>

			<number_dropadd name="dpburned" source="destiny.dp.burned">
				<anchored to="label_dpdetail" width="45" height="20">
					<top anchor="top" />
					<left anchor="right" relation="relative" offset="5" />
