					<top anchor="top" />
					<left anchor="right" relation="relative" offset="5" />
				</anchored>
			</number_dropadd>
			<label_fieldtop>
				<anchored to="spawarded" />
				<static textres="char_label_sp_awarded" />
			</label_fieldtop>

			<label>
