					<left anchor="right" relation="relative" offset="5" />
				</anchored>
				<center />
				<static>-</static>
			</label>

			<number_dropadd name="spinvested" source="destiny.sp.invested">
				<anchored to="label_spdetail" width="45" height="20">
					<top anchor="top" />
					<left anchor="right" relation="relative" offset="5" />
				</anchored>
			</number_dropadd>
			<label_fieldtop>
				<anchored to="spinvested" />
