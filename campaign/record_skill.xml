<root>
	<windowclass name="reference_skill" copy="record_window">
		<sheetdata>
			<sub_record_header name="header">
				<class>ref_skill_header</class>
			</sub_record_header>
			<subwindow_record name="content">
				<class>skill_main</class>
			</subwindow_record>
		</sheetdata>
	</windowclass>
	<windowclass name="ref_skill_header" copy="record_header">
		<sheetdata>
			<button_ichat name="button_ichat" insertbefore="name" />
		</sheetdata>
	</windowclass>
	<windowclass name="skill_main">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				self.update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				stat.setReadOnly(bReadOnly);
				text.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label_column name="stat_label">
				<static textres="skill_label_ability" />
			</label_column>
			<string_columnh name="stat" />

			<ft_columnh name="text" />
		</sheetdata>
	</windowclass>
</root>