			function onInit()
				self.update();
			end
			function onVersionChanged()
				self.update();
			end
			function update()
				local nodeRecord = getDatabaseNode();
				local bIs2024 = (DB.getValue(nodeRecord, "version", "") == "2024");
				if bIs2024 then
					sub_content.setValue("npc_notes_2024", nodeRecord);
				else
					sub_content.setValue("record_content_text", nodeRecord);
				end
				WindowManager.callSafeControlUpdate(self, "sub_content", bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_content_top />
			<sub_content_column name="sub_content" />
		</sheetdata>
