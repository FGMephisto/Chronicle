	<windowclass name="char_weapon_editor">
		<frame>charsheethelper</frame>
		<placement>
			<size width="525" height="350" />
		</placement>
		<sizelimits>
			<minimum width="525" height="350" />
			<dynamic />
		</sizelimits>
		<tooltip control="name" />

