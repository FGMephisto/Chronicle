	<windowclass name="reference_feat_main">
		<script>
			function onInit()
				self.update();
			end
			function onVersionChanged()
				self.update();
			end
			function update()
				local nodeRecord = getDatabaseNode();
				local bIs2024 = true;
				if bIs2024 then
					sub_content.setValue("reference_feat_main_2024", nodeRecord);
				else
					sub_content.setValue("reference_feat_main_2014", nodeRecord);
				end
				WindowManager.callSafeControlUpdate(self, "sub_content", bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_content_top />
			<sub_content_column name="sub_content" />
		</sheetdata>
	</windowclass>

