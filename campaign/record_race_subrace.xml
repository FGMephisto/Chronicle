<root>
	<windowclass name="reference_subrace" copy="record_window_tabbed">
		<tab>
			<name>notes</name>
			<resource>tab_main</resource>
			<class>record_content_text</class>
			<embed />
		</tab>
		<tab merge="add">
			<name>main</name>
			<resource>tab_other</resource>
			<class>reference_subrace_main</class>
			<embed />
		</tab>
	</windowclass>
	<windowclass name="reference_subrace_header" copy="record_header" />

	<windowclass name="reference_subrace_main">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				race.setReadOnly(bReadOnly);
				traits.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label_column name="race_label">
				<static textres="race_subrace_label_race" />
			</label_column>
			<string_columnh name="race" />

			<header_column name="traits_header">
				<static textres="race_header_traits"/>
				<center />
			</header_column>
			<button_iedit name="traits_iedit">
				<anchored to="traits_header" position="righthigh" offset="-20,0" />
				<target>traits</target>
			</button_iedit>
			<button_iadd name="traits_iadd">
				<anchored to="traits_iedit" position="lefthigh" offset="5,0" />
				<target>traits</target>
			</button_iadd>
			<list_column name="traits">
				<datasource>.traits</datasource>
				<class>ref_subracial_trait</class>
			</list_column>
		</sheetdata>
	</windowclass>
	<windowclass name="ref_subracial_trait">
		<margins control="0,0,0,2" />
		<sheetdata>
			<anchor_listitem_column_right name="rightanchor" />
			<link_listitem_column name="shortcut">
				<class>reference_subracialtrait</class>
			</link_listitem_column>
			<button_listitem_column_delete name="idelete" />

			<string_listitem_column_name name="name">
				<empty textres="library_recordtype_empty_subracialtrait" />
			</string_listitem_column_name>
		</sheetdata>
	</windowclass>

	<windowclass name="reference_subracialtrait" copy="record_window_text" />
	<windowclass name="reference_subracialtrait_header" copy="record_header">
		<name_emptyres>library_recordtype_empty_subracialtrait</name_emptyres>
	</windowclass>
</root>
