<root>
	<windowclass name="reference_subrace">
		<frame>recordsheet</frame>
		<placement>
			<size width="350" height="350" />
		</placement>
		<sizelimits>
			<minimum width="300" height="300" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<script file="common/scripts/record_window.lua" />
		<sheetdata>
			<sub_record_header name="header">
				<class>ref_subrace_header</class>
			</sub_record_header>

			<frame_record_content_tabbed name="contentframe" />

			<ft_record name="text">
				<anchored to="contentframe" position="over" />
				<invisible />
			</ft_record>
			<subwindow_record name="content">
				<class>ref_subrace_stats</class>
			</subwindow_record>

			<scrollbar_record>
				<target>text</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>content</target>
			</scrollbar_record>
			
			<tabs_recordsheet name="tabs">
				<tab>
					<icon>tab_main</icon>
					<subwindow>text</subwindow>
				</tab>
				<tab>
					<icon>tab_other</icon>
					<subwindow>content</subwindow>
				</tab>
			</tabs_recordsheet>
			
			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>
	<windowclass name="ref_subrace_header" copy="record_header" />
	<windowclass name="ref_subrace_stats">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				race.setReadOnly(bReadOnly);
				traits.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label_column name="race_label">
				<static textres="race_subrace_label_race" />
			</label_column>
			<string_columnh name="race" />

			<header_column name="traits_header">
				<static textres="race_header_traits"/>
				<center />
			</header_column>
			<button_iedit name="traits_iedit">
				<anchored to="traits_header" position="righthigh" offset="-20,0" />
				<target>traits</target>
			</button_iedit>
			<button_iadd name="traits_iadd">
				<anchored to="traits_iedit" position="lefthigh" offset="5,0" />
				<target>traits</target>
			</button_iadd>
			<list_column name="traits">
				<datasource>.traits</datasource>
				<class>ref_subracial_trait</class>
			</list_column>
		</sheetdata>
	</windowclass>
	
	<windowclass name="ref_subracial_trait">
		<margins control="0,0,0,2" />
		<sheetdata>
			<anchor_listitem_column_right name="rightanchor" />
			<link_listitem_column name="shortcut">
				<class>reference_subracialtrait</class>
			</link_listitem_column>
			<button_listitem_column_delete name="idelete" />

			<string_listitem_column_name name="name">
				<empty textres="library_recordtype_empty_subracialtrait" />
			</string_listitem_column_name>
		</sheetdata>
	</windowclass>

	<windowclass name="reference_subracialtrait" copy="record_window_text">
		<sheetdata>
			<sub_record_header name="header">
				<class>ref_subracialtrait_header</class>
			</sub_record_header>
		</sheetdata>
	</windowclass>
	<windowclass name="ref_subracialtrait_header" copy="record_header_simple">
		<sheetdata>
			<link_record_header name="link">
				<class>reference_subracialtrait</class>
			</link_record_header>

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_subracialtrait" />
			</string_record_name>
			<label_recordtype name="recordtype_label">
				<static textres="ref_type_racialtrait" />
			</label_recordtype>	
		</sheetdata>
	</windowclass>
</root>