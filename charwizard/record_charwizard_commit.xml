					<left offset="15" />
					<right anchor="center" offset="-100" />
				</anchored>
				<static textres="char_label_race" />
			</label>
			<stringcu name="summary_species">
				<anchored to="summary_speciestitle" position="insidetop" offset="0,15" height="20" />
