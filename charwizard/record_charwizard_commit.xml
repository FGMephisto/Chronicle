<root>
	<windowclass name="charwizard_sub_commit">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				update();
			end
			function update()
				CharWizardManager.clearSummary();
				CharWizardManager.populateSummary();
				CharWizardManager.checkCompletion();
			end
		</script>
		<sheetdata>
			<frame_char name="overviewframe">
				<anchored height="45">
					<left offset="15" />
					<top offset="10" />
					<right offset="-15" />
				</anchored>
			</frame_char>
			<stringc_labeled name="name">
				<anchored to="overviewframe" position="insidetopleft" offset="15,10" height="20">
					<right offset="-15" />
				</anchored>
				<labelres>char_label_name</labelres>
				<script>
					function onInit()
						super.onInit();
						if CharWizardManager.isLevelUpData() then
							window.overviewframe.setVisible(false);
							setVisible(false);
						end
					end
					local _bUpdating = false
					function onValueChanged()
						if _bUpdating then
							return false
						end
						_bUpdating = true
						CharWizardManager.setName(getValue());
						_bUpdating = false
					end
				</script>
			</stringc_labeled>

			<label_charframetop name="warnings_label">
				<anchored height="20">
					<top parent="overviewframe" anchor="bottom" relation="relative" offset="15" />
					<left offset="15" />
					<right offset="-15" />
				</anchored>
				<icons>button_alert</icons>
				<static textres="charwizard_label_warnings" />
			</label_charframetop>

			<windowlist name="warnings">
				<anchored>
					<top parent="overviewframe" anchor="bottom" relation="relative" offset="15" />
					<left offset="15" />
					<right offset="-15" />
				</anchored>
				<child></child>
				<readonly />
				<noscroll />
				<class>charwizard_commit_warnings</class>
				<script>
					function onInit()
						updateVisibility();
					end
					function onListChanged()
						updateVisibility();
					end
					function updateVisibility()
						self.setVisible(not isEmpty());
						window.warnings_label.setVisible(not isEmpty());
					end
				</script>
			</windowlist>

			<button_text name="button_commit">
				<anchored>
					<top parent="overviewframe" anchor="bottom" relation="relative" offset="15" />
					<left anchor="center" offset="-45" />
					<right anchor="center" offset="45" />
				</anchored>
				<state textres="charwizard_label_save" />
				<script>
					function onButtonPress()
						CharWizardManager.onCommit();
					end
				</script>
			</button_text>

			<label_charframetop name="summary_label">
				<anchored height="20">
					<top parent="overviewframe" anchor="bottom" relation="relative" offset="15" />
					<left offset="15" />
					<right offset="-15" />
				</anchored>
				<icons>char_notes</icons>
				<static textres="charwizard_title_summary" />
			</label_charframetop>

			<subwindow name="sub_commit_summary">
				<anchored>
					<left offset="15" />
					<top parent="overviewframe" anchor="bottom" relation="relative" offset="10" />
					<right offset="-10" />
				</anchored>
				<class>charwizard_commit_summary</class>
				<activate />
				<fastinit />
			</subwindow>
		</sheetdata>
	</windowclass>

	<windowclass name="charwizard_commit_warnings">
		<margins control="0,0,0,2" />
		<sheetdata>
			<anchor_listitem_left />
			<stringc_listitem_left_noframe_static name="warning_label">
				<anchored width="90" />
				<font>reference-h</font>
				<default>WARNING</default>
			</stringc_listitem_left_noframe_static>

			<anchor_listitem_right />
			<stringc_listitem_center_noframe_static name="warning">
				<font name="sheetlabel" />
			</stringc_listitem_center_noframe_static>
		</sheetdata>
	</windowclass>

