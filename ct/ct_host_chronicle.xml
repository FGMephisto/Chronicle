<root>
	<windowclass name="combattracker_host" merge="join">
		<sizelimits>
			<minimum width="650" />
		</sizelimits>
		<script file="ct/scripts/ct_window_dnd.lua" />
	</windowclass>

	<!-- Adjusted -->
	<windowclass name="sub_ct_header_host" merge="join">
		<sheetdata>
			<spacer_ct_header_right name="spacer_buttons_header_add" insertbefore="label_init">
				<anchored width="40" />
			</spacer_ct_header_right>

			<label_ct_header_right name="label_wounds" insertbefore="label_init">
				<static textres="ct_label_wounds" />
				<tooltip textres="ct_tooltip_wounds" />
			</label_ct_header_right>
			<label_ct_header_right name="label_trauma" insertbefore="label_init">
				<static textres="ct_label_trauma" />
				<tooltip textres="ct_tooltip_trauma" />
			</label_ct_header_right>
			<label_ct_header_right name="label_injuries" insertbefore="label_init">
				<static textres="ct_label_injuries" />
				<tooltip textres="ct_tooltip_injuries" />
			</label_ct_header_right>
			<label_ct_header_right name="label_fatigue" insertbefore="label_init">
				<static textres="ct_label_fatigue" />
				<tooltip textres="ct_tooltip_fatigue" />
			</label_ct_header_right>
			<label_ct_header_right name="label_hp" insertbefore="label_init">
				<static textres="hp" />
				<tooltip textres="hitpoints" />
			</label_ct_header_right>
		</sheetdata>
	</windowclass>
</root>