<root>
	<!-- =================================================================================================================== -->
	<!-- =================================================================================================================== -->
	<windowclass name="combattracker_host">
		<frame>ctbox</frame>

		<placement>
			<size width="770" height="500" />
		</placement>

		<sizelimits>
			<minimum width="770" height="500" />
			<dynamic />
		</sizelimits>

		<softclose />
		<sheetdata>
			<windowtitlebar name="title">
				<resource>ct_window_title</resource>
			</windowtitlebar>

			<anchor_title_ctbox name="contentanchor" />

			<anchor_ctbox_host_header />

			<frame_ctbox_host_header_visibility name="header_vis" />

			<!-- =================================================================================================================== -->
			<!-- NPC Global Visibility -->
			<!-- =================================================================================================================== -->
			<buttoncontrol name="button_global_visibility">
				<anchored to="header_vis" position="insidetopleft" offset="-5,2" width="22" height="22" />
				<state icon="visibilityoff" tooltipres="ct_tooltip_shownpcallon" />
				<state icon="visibilityon" tooltipres="ct_tooltip_shownpcalloff" />
				<script>
					function onValueChanged()
						window.list.toggleVisibility();
					end
				</script>
			</buttoncontrol>

			<!-- =================================================================================================================== -->
			<!-- Header Labels -->
			<!-- =================================================================================================================== -->
			<frame_ctbox_host_header_labels name="header_labels" />

			<label_ct name="label_name">
				<anchored to="header_labels" position="insidetopleft" offset="5,3">
					<right offset="-425" />
				</anchored>
				<static textres="ct_label_name" />
				<center />
			</label_ct>

			<label_ct name="label_wounds">
				<anchored to="header_labels" position="insidetopright" offset="180,3" width="30" />
				<center />
				<static textres="ct_label_wounds" />
				<tooltip textres="ct_tooltip_wounds" />
			</label_ct>

			<label_ct name="label_trauma">
				<anchored to="header_labels" position="insidetopright" offset="220,3" width="30" />
				<center />
				<static textres="ct_label_trauma" />
				<tooltip textres="ct_tooltip_trauma" />
			</label_ct>

			<label_ct name="label_injuries">
				<anchored to="header_labels" position="insidetopright" offset="260,3" width="30" />
				<center />
				<static textres="ct_label_injuries" />
				<tooltip textres="ct_tooltip_injuries" />
			</label_ct>

			<label_ct name="label_fatigue">
				<anchored to="header_labels" position="insidetopright" offset="300,3" width="30" />
				<center />
				<static textres="ct_label_fatigue" />
				<tooltip textres="ct_tooltip_fatigue" />
			</label_ct>

			<label_ct name="label_hp">
				<anchored to="header_labels" position="insidetopright" offset="340,3" width="30" />
				<center />
				<static textres="hp" />
				<tooltip textres="ct_tooltip_hitpoints" />
			</label_ct>

			<label_ct name="label_init">
				<anchored to="header_labels" position="insidetopright" offset="385,3" width="30" />
				<center />
				<static textres="init" />
				<tooltip textres="ct_tooltip_initative" />
			</label_ct>

			<!-- =================================================================================================================== -->
			<!-- Bottom line -->
			<!-- =================================================================================================================== -->
			<list_ctbox_host />
			<scrollbar_list />

			<button_ct_setactive />
			<button_ct_nextactor />

			<button_ct_faction_friend />
			<button_ct_faction_neutral />
			<button_ct_faction_foe />

			<button_ct_menu />

			<label_ct_host_rounds />
			<number_ct_host_rounds />
			<button_ct_nextround />
			
			<resize_ctbox />
			<helper_ct />
			<close_ctbox />
		</sheetdata>
	</windowclass>
</root>